<!DOCTYPE html>
<html lang="da">
<head>
    <meta charset="UTF-8">
    <title>Ændre film oplysninger</title>
    <link rel="stylesheet" type="text/css" href="/styles/movie.css">
    <link rel="stylesheet" type="text/css" href="/styles/login.css">
</head>
<body>


<div class="movie-container">
    <div class="left-container">
        <img id="moviePoster"class="movie-poster" src="{{movie.moviePoster}}">
    </div>
    <div class="right-container">
        <h2>Ændre film oplysninger <br>"{{movie.title}}"</h2>
        <div class="line"></div>

        <div class="input-group">
            <label for="title">Titel:</label>
            <div class="dotted-line"></div>
            <input type="text" id="title" value="{{movie.title}}" required>
        </div>


        <!-- det skal vel være sådan at man kan vælge flere -->
        <div class="input-group">
            <label for="genre">Genre:</label>
            <div class="dotted-line"></div>
            <select id="genre" value="{{movie.genre}}" required>
                <option value="horror">Horror</option>
                <option value="romance">Romance</option>
                <option value="comedy">Komedi</option>
                <option value="sci-fi">Sci-Fi</option>
                <option value="action">Action</option>
                <option value="thriller">Thriller</option>
                <option value="adventure">Adventure</option>
                <option value="animation">Animation</option>
                <option value="documentary">Dokumentar</option>
                <option value="drama">Drama</option>
                <option value="family">Familie</option>
            </select>
        </div>

        <div class="input-group">
            <label for="ageLimit">Aldersbegrænsning:</label>
            <div class="dotted-line"></div>
            <input type="text" id="ageLimit" value="{{movie.ageLimit}}" required>
        </div>

        <div class="input-group">
            <label for="description">Beskrivelse:</label>
            <div class="dotted-line"></div>
            <textarea id="description" maxlength="500">{{movie.description}}</textarea>
        </div>

        <div class="input-group">
            <label for="image-url">Billede URL:</label>
            <div class="dotted-line"></div>
            <input type="url" value="{{movie.moviePoster}}" id="moviePoster">
        </div>

        <button class="button">Opdatér</button>
    </div>
</div>

</body>

<script src="/js/movie.js"></script>

</html>